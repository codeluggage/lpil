module hello_world_sup

export start_link/0, init/1

let server =
  :hello_world_sup

-- API functions

let start_link () =
  beam :supervisor :start_link [(:local, server), server, []] with
  | (:ok, result) -> result
  | _ -> throw :error

-- Supervisor callbacks

-- Child :: {Id,StartFunc,Restart,Shutdown,Type,Modules}
let init _ =
  (:ok, ((:one_for_all, 0, 1), []))
